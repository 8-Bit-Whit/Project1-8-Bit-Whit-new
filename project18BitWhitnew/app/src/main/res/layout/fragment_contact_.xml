<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/white"
    tools:context=".contact_Fragment">
<!--This is the layout file for the contact us fragment. It contains the UI elements for the contact us screen.-->

    <TextView
        android:id="@+id/contact_us_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textAlignment="textStart"
        android:textColor="@color/purple"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/contact_us_person"
        android:layout_width="382dp"
        android:layout_height="18dp"
        android:text="@string/contact_text"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_stem_image"
        app:layout_constraintVertical_bias="0.28" />

    <ImageView
        android:id="@+id/ontact_us_email_icon"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:src="@drawable/email"
        app:layout_constraintBottom_toTopOf="@+id/contact_us_email_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_us_person"
        app:layout_constraintVertical_bias="0.434" />

    <TextView
        android:id="@+id/contact_us_email_text"
        android:layout_width="189dp"
        android:layout_height="32dp"
        android:text="jjohn428@msudenver.edu"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_us_person"
        app:layout_constraintVertical_bias="0.239" />

    <ImageView
        android:id="@+id/contact_stem_image"
        android:layout_width="148dp"
        android:layout_height="135dp"
        android:src="@drawable/stemimage2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251" />

    <TextView
        android:id="@+id/contact_text_body"
        android:layout_width="371dp"
        android:layout_height="78dp"
        android:text="@string/contact_text_2"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/contact_us_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />

</androidx.constraintlayout.widget.ConstraintLayout>